@model IEnumerable<BilgeAdam.Northwind.NetData.Dtos.ProductDto>
@{
    ViewBag.Title = "Index";
}

<table id="tblProducts" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ürün Kodu</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok Miktarı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.UnitsInStock</td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script src="~/Scripts/Pages/productIndex.js"></script>
}