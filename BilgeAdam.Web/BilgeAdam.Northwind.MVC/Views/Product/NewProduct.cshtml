@model BilgeAdam.Northwind.NetData.Dtos.ProductDto

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("SaveProduct", "Product")" method="post">
            <div class="form-group">
                <label>Ürün Adı</label>
                @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Fiyat</label>
                @Html.TextBoxFor(i => i.Price, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Stok Miktarı</label>
                @Html.TextBoxFor(i => i.UnitsInStock, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary" type="submit">
                <span class="glyphicon glyphicon-save"></span>
                Kaydet
            </button>
        </form>
    </div>
</div>