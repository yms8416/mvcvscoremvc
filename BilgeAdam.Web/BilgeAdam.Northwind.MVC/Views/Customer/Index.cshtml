@model IEnumerable<BilgeAdam.Northwind.NetData.Dtos.CustomerDto>

@{
    ViewBag.Title = "Index";
}

<h2>Müşteri Listesi</h2>

<div class="row">
    <div class="col-md-12">
        <table id="tblCustomers" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Müşteri Numarası</th>
                    <th>Adı Soyadı</th>
                    <th>Şirket</th>
                    <th>Ülke</th>
                    <th>Şehir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.FullName</td>
                        <td>@customer.Company</td>
                        <td>@customer.Country</td>
                        <td>@customer.City</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

